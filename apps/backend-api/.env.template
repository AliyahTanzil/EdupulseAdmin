# Environment variables for EduSync Pro PostgreSQL connection

# Port for the Express server
PORT=3000

# PostgreSQL database host
DB_HOST=localhost

# PostgreSQL database name
DB_NAME=edusync_pro_db

# PostgreSQL database user
DB_USER=edusync_pro_user

# PostgreSQL database password
DB_PASSWORD=edusync_pro_password

# PostgreSQL database port
DB_PORT=5432

# Secret key for JWT authentication
JWT_SECRET=supersecretjwtkey

# Secret key for JWT refresh token
REFRESH_TOKEN_SECRET=supersecretrefreshtokenkey
